<%= turbo_frame_tag task do %>
  <div class="flex justify-between items-center item">

    <%= form_with model: task do |form| %>
      <%= form.check_box :completed, onchange: "this.form.submit()" %>
      <%= form.label :completed, task.description, class: ("line-through" if task.completed?) %>
    <% end %>

    <div class="flex space-x-2 items-center">
      <%= link_to "Edit", edit_task_path(task), class: "edit-btn" %>
      <%= button_to "Delete", task, method: :delete, data: { turbo_frame: "_top" }, class: "delete-btn" %>
    </div>
  </div>
<% end %>
